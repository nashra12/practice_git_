# Launcher
alt + space
   OLD_ZDOTDIR="$ZDOTDIR" ZDOTDIR="$XDG_CONFIG_HOME/zsh/launcher" urxvt -name Launcher -fn "xft:dejavu sans mono:normal:size=18" -geometry 160x6 -bc -uc -e zsh

# Rofi : Windows list/selector
super + r
     rofi -show window -font "snap 12" -fg "#eee8d5" -bg "#073642" -hlfg "#ffb964" -hlbg "#073642" -o 85 

## Rofi : pass
#super + e
#     pass-menu

# lock screen
super + less
    xtrlock

# Raise first active card volume
shift + {XF86AudioRaiseVolume,XF86AudioLowerVolume}
	pactl set-sink-volume $(pactl list sinks | grep -B 1 RUNNING | sed '1q;d' | sed 's/[^0-9]\+//g') {+,-}5%
# Toggle MPD
{XF86AudioPlay,XF86AudioMicMute}
	mpc toggle &> /dev/null

# Lower brightness
{XF86MonBrightnessDown,ctrl + XF86AudioLowerVolume}
    sudo backlight -10
# Raise Brigtness
{XF86MonBrightnessUp, ctrl + XF86AudioRaiseVolume}
    sudo backlight +10

# Next Prev song on MPD
alt + {XF86AudioRaiseVolume,XF86AudioLowerVolume}
    mpc {next,prev} &> /dev/null

# Spawn Scratchpad
super + space
   xdotool search --onlyvisible --classname URxvtControlWrapper windowunmap \
    || xdotool search --classname URxvtControlWrapper windowmap \
    || urxvt -name URxvtControlWrapper -geometry 410x104

# "False" fullscreen, respects padding/margin, etc.
super + f
    bspc desktop -l next

# set the window state
super + {a,s,d,F}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# focus/preselect/swap the node in the given direction
super + {_, alt + ,ctrl + }{h,j,k,l}
    bspc node -{f,p,s} {west,south,north,east}

# expand the tiled space in the given direction
super + ctrl + alt + {h,j,k,l}
    bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + ctrl + alt + shift + {h,j,k,l}
    bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# Move between the desktops of a monitor
super + {_,alt +,ctrl +,alt + ctrl +} {b,n}
    bspc {desktop -f,node -f,monitor -f,monitor -m} {prev,next}

# Node flags
super + {y,x,c,v}
    bspc node -g {private,urgent,locked,sticky}

# Force close
super + F4
    bspc node --close

# Shell
super + ctrl + Return
    urxvt


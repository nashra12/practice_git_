source "$XDG_CONFIG_HOME/mutt/password.sh ayekat |"

set realname  = 'ayekat'
set from      = "$my_address"
set folder    = 'imaps://mail.ayekat.ch:993/'
set imap_user = "$my_user"
set imap_pass = "$my_password"
set smtp_pass = "$my_password"
set smtp_url  = "smtps://$my_user@mail.ayekat.ch:587/"
set ssl_starttls = yes

mailboxes     = +INBOX
set spoolfile = +INBOX
set postponed = +Drafts
set record    = +Sent

source "$XDG_CONFIG_HOME/mutt/muttrc"

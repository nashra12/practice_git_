# vim:ft=yaml
groups:
- name: alerting
  rules:
    - alert: Node is unreachable
      expr: up{job="node"} == 0
      for: 5m
      labels:
        severity: critical
      annotations:
        summary: "Node {{ $labels.instance }} down"
        description: "Node {{ $labels.instance }} has been unreachable for 5m."

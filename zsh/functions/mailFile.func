function mailFile(){
	if [[ $# -gt 1 ]]; then
		echo "Warning: This Macro accept one and one only argument, I'll ignore the rest of the arguments. You may want to use compress macro if you really want to send all the specified files" 
	fi
	thunderbird -compose subject="$1",body="$1 file attached",attachment="file://$(pwd)/$1" &>/dev/null &
}

